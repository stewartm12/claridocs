<%= content_tag :div, class: 'min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8' do %>
  <%= content_tag :div, class: 'max-w-md w-full space-y-8' do %>
    <%= content_tag :div, class: 'text-center' do %>
      <%= link_to root_path, class: 'flex items-center justify-center mb-6' do %>
        <%= image_tag "https://hebbkx1anhila5yf.public.blob.vercel-storage.com/attachments/gen-images/public/claridocs-logo-modern-clean-F2aiTC3w4Gj16Z3M5yb3pFDckjYReJ.jpg",
          class: "size-8 mr-3" %>
        <%= content_tag :span, 'Claridocs', class: 'text-2xl font-bold' %>
      <% end %>
      <%= content_tag :h3, 'Welcome Back', class: 'text-3xl font-bold mb-2' %>
      <%= content_tag :p, 'Sign in to your account to continue', class: 'text-muted-foreground' %>
    <% end %>

    <%= content_tag :div, class: 'bg-card rounded-xl border border-border p-8 shadow-sm' do %>
      <%= form_with url: session_url, class: 'space-y-6' do |f| %>
        <%= content_tag :div do %>
          <%= f.label :email, class: 'block text-sm font-medium mb-2' %>
          <%= f.email_field :email,
            required: true,
            autofocus: true,
            autocomplete: 'email',
            placeholder: 'name@example.com',
            class: 'w-full px-3 py-2 border border-border rounded-lg bg-input placeholder-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent' %>
        <% end %>

        <%= content_tag :div do %>
          <%= f.label :password, class: 'block text-sm font-medium mb-2' %>
          <%= f.password_field :password,
            required: true,
            autocomplete: 'current-password',
            placeholder: '••••••••',
            maxlength: 72,
            class: 'w-full px-3 py-2 border border-border rounded-lg bg-input placeholder-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent' %>
        <% end %>

        <%= content_tag :div, class: 'flex items-center justify-between' do %>
          <%= content_tag :div, class: 'flex items-center' do %>
              <%= f.check_box :remember_me, class: 'h-4 w-4 text-primary focus:ring-ring border-border rounded' %>
              <%= f.label :remember_me, 'Remember me', class: 'ml-2 block text-sm text-muted-foreground' %>
          <% end %>

          <%= content_tag :div, class: 'text-sm' do %>
            <%= link_to 'Forgot your password?', new_password_path, class: 'text-primary hover:text-primary/80 transition-colors hover:underline' %>
          <% end %>
        <% end %>

        <%= f.submit 'Sign In', class: 'w-full bg-primary text-primary-foreground py-2 px-4 rounded-lg hover:bg-emerald-500 transition-colors font-medium hover:cursor-pointer' %>
      <% end %>
    <% end %>

    <%= content_tag :div, class: 'text-center' do %>
      <%= content_tag :p, class: 'text-muted-foreground' do %>
        Don't have an account? <%= link_to 'Sign Up', new_registration_path, class: 'text-primary hover:text-primary/80 transition-colors hover:underline' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
