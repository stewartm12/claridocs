<%= content_tag :div, class: 'min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8' do %>
  <%= content_tag :div, class: 'max-w-md w-full space-y-8' do %>
    <%= content_tag :div, class: 'text-center' do %>
      <%= link_to root_path, class: 'flex items-center justify-center mb-6' do %>
        <%= image_tag "https://hebbkx1anhila5yf.public.blob.vercel-storage.com/attachments/gen-images/public/claridocs-logo-modern-clean-F2aiTC3w4Gj16Z3M5yb3pFDckjYReJ.jpg",
          class: "size-8 mr-3" %>
        <%= content_tag :span, 'Claridocs', class: 'text-2xl font-bold text-black' %>
      <% end %>
      <%= content_tag :h3, t('.welcome_back'), class: 'text-3xl font-bold mb-2' %>
      <%= content_tag :p, t('.description'), class: 'text-muted-foreground' %>
    <% end %>

    <%= content_tag :div, class: 'bg-card rounded-xl border border-border p-8 shadow-sm' do %>
      <%= form_with url: session_url, class: 'space-y-6' do |f| %>
        <%= content_tag :div do %>
          <%= f.label :email %>
          <%= f.email_field :email,
            required: true,
            autofocus: true,
            autocomplete: 'email',
            placeholder: 'name@example.com' %>
        <% end %>

        <%= content_tag :div do %>
          <%= f.label :password %>
          <%= f.password_field :password,
            required: true,
            autocomplete: 'current-password',
            placeholder: '••••••••',
            maxlength: 72 %>
        <% end %>

        <%= content_tag :div, class: 'flex items-center justify-between' do %>
          <%= content_tag :div, class: 'flex items-center gap-x-2' do %>
            <%= f.check_box :remember_me, class: 'h-4 w-4 text-primary focus:ring-ring border-border rounded' %>
            <%= f.label :remember_me, 'Remember me', class: 'text-sm text-muted-foreground mb-0' %>
          <% end %>

          <%= content_tag :div, class: 'text-sm' do %>
            <%= link_to t('.forgot_password'), new_password_path %>
          <% end %>
        <% end %>

        <%= f.submit t('.sign_in'), class: 'w-full btn-primary' %>
      <% end %>
    <% end %>

    <%= content_tag :div, class: 'text-center' do %>
      <%= content_tag :p, class: 'text-muted-foreground' do %>
        <%= t('.no_existing_account') %><%= link_to t('.sign_up'), new_registration_path %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
