<%= content_tag :div, class: top_nav_class do %>
  <%= nav_link_to dashboard_path, class: 'nav-links' do %>
    <%= heroicon 'home', options: { class: 'size-5' } %>
    <%= content_tag :span, 'Dashboard' %>
  <% end %>
  
  <%= nav_link_to collections_path, class: 'nav-links' do %>
    <%= heroicon 'folder-open', options: { class: 'size-5' } %>
    <%= content_tag :span, 'Collections' %>
  <% end %>
  
  <%= nav_link_to '#', class: 'nav-links' do %>
    <%= heroicon 'link', options: { class: 'size-5' } %>
    <%= content_tag :span, 'Integrations' %>
  <% end %>
  
  <% if Rails.env.development? %>
    <%= nav_link_to code_qualities_path, class: 'nav-links' do %>
      <%= heroicon 'code-bracket', options: { class: 'size-5' } %>
      <%= content_tag :span, 'Code Quality' %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag :div, class: 'px-3 py-4 border-t border-gray-200 space-y-1' do %>
  <%= nav_link_to '#', class: 'nav-links' do %>
    <%= icon 'cog-8-tooth', class: 'size-5' %>
    <%= content_tag :span, 'Settings' %>
  <% end %>
  
  <%= link_to session_path, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'flex items-center space-x-3 px-3 py-2.5 rounded-lg text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 transition-all duration-200' do %>
    <%= icon 'arrow-left-start-on-rectangle', class: 'size-5' %>
    <%= content_tag :span, 'Sign Out' %>
  <% end %>
<% end %>
