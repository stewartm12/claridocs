<!-- Search Bar -->
<%= content_tag :div, class: 'relative w-full' do %>
  <%= content_tag :div, class: 'absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none' do %>
    <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
  <% end %>
  <%= text_field_tag :search, params[:search], 
    placeholder: "Search your documents with AI... Try 'contracts from 2024' or 'meeting summaries'",
    class: "w-full pl-10 pr-12 py-2.5 border border-gray-300 rounded-lg bg-white text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all duration-200" 
    # data: { 
    #   controller: "search",
    #   action: "input->search#handleInput keydown->search#handleKeydown",
    #   search_target: "input"
    # }
    %>
  <%= content_tag :div, class: 'absolute inset-y-0 right-0 pr-3 flex items-center' do %>
    <%= content_tag :div, class: 'flex items-center space-x-1' do %>
      <%= content_tag :span, class: 'hidden lg:inline-flex items-center px-2 py-0.5 text-xs font-medium bg-gray-100 text-gray-600 rounded border border-gray-200' do %>
        <svg class="h-3 w-3 mr-1" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
          <path d="M12.5 7H11v6l5.25 3.15.75-1.23L12.5 12V7z"/>
        </svg>
        AI
      <% end %>
      <%= content_tag :kbd, 'âŒ˜K', class: 'hidden sm:inline-block px-1.5 py-0.5 text-xs font-semibold text-gray-600 bg-white border border-gray-300 rounded shadow-sm' %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag :div, class: 'absolute top-full left-0 right-0 mt-2 bg-white rounded-lg shadow-lg border border-gray-200 z-50 hidden', data: { search_target: "results" } do %>
  <%= content_tag :div, class: 'p-4' do %>
    <%= content_tag :div, class: 'flex items-center justify-center py-8 text-gray-500' do %>
      <svg class="h-8 w-8 mr-3 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <%= content_tag :span, 'AI is searching your documents...' %>
    <% end %>
  <% end %>
<% end %>
