<%= content_tag :nav, class: 'bg-white border-r border-gray-200 max-w-[15rem] w-64 min-w-[12rem] hidden md:flex flex-col sticky top-16 h-[calc(100vh-64px)] shadow-sm' do %>
  <%= content_tag :div, class: 'px-4 py-6 border-b border-gray-200' do %>
    <%= content_tag :div, class: 'flex items-center space-x-3' do %>
      <%= content_tag :div, class: 'h-8 w-8 bg-emerald-100 rounded-full flex items-center justify-center' do %>
        <%= content_tag :span, current_user.name.first.upcase, class: 'text-sm font-semibold text-emerald-700' %>
      <% end %>
      <%= content_tag :div, class: 'min-w-0 flex-1' do %>
        <%= content_tag :p, current_user.name, class: 'text-sm font-medium text-gray-900 truncate' %>
        <%= content_tag :p, current_user.email, class: 'text-xs text-gray-500' %>
      <% end %>
    <% end %>
  <% end %>

  <%= content_tag :div, class: 'flex flex-col justify-between flex-1' do %>
    <%= render 'shared/navigation/links', top_nav_class: 'px-3 py-4 space-y-1 flex-1' %>
  <% end %>
<% end %>
