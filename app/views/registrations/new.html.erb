<%= content_tag :div, class: 'min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8' do %>
  <%= content_tag :div, class: 'max-w-md w-full space-y-8' do %>
    <%= content_tag :div, class: 'text-center' do %>
      <%= link_to root_path, class: 'flex items-center justify-center mb-6' do %>
        <%= image_tag "https://hebbkx1anhila5yf.public.blob.vercel-storage.com/attachments/gen-images/public/claridocs-logo-modern-clean-F2aiTC3w4Gj16Z3M5yb3pFDckjYReJ.jpg",
          class: "size-8 mr-3" %>
        <%= content_tag :span, 'Claridocs', class: 'text-2xl font-bold text-black' %>
      <% end %>
      <%= content_tag :h3, 'Create Your Account', class: 'text-3xl font-bold mb-2' %>
      <%= content_tag :p, 'Start managing your documents with AI-powered insights', class: 'text-muted-foreground' %>
    <% end %>

    <%= content_tag :div, class: 'bg-card rounded-xl border border-border p-8 shadow-sm' do %>
      <%= form_with url: registration_path, model: @user, class: 'space-y-6' do |f| %>
        <%= content_tag :div do %>
          <%= f.label :name, class: 'block text-sm font-medium mb-2' %>
          <%= f.text_field :name,
            required: true,
            autofocus: true,
            autocomplete: 'given-name',
            placeholder: 'John'  %>
        <% end %>

        <%= content_tag :div do %>
          <%= f.label :email, class: 'block text-sm font-medium mb-2' %>
          <%= f.email_field :email,
            required: true,
            autofocus: true,
            autocomplete: 'email',
            placeholder: 'name@example.com'  %>
        <% end %>

        <%= content_tag :div do %>
          <%= f.label :password, class: 'block text-sm font-medium mb-2' %>
          <%= f.password_field :password,
            required: true,
            autocomplete: 'current-password',
            placeholder: '••••••••',
            maxlength: 72  %>
        <% end %>

        <%= content_tag :div do %>
          <%= f.label :password_confirmation, class: 'block text-sm font-medium mb-2' %>
          <%= f.password_field :password_confirmation,
            required: true,
            autocomplete: 'current-password-confirmation',
            placeholder: '••••••••',
            maxlength: 72  %>
        <% end %>

        <%= f.submit 'Create Account', class: 'w-full btn-primary' %>
      <% end %>
    <% end %>

    <%= content_tag :div, class: 'text-center' do %>
      <%= content_tag :p, class: 'text-muted-foreground' do %>
        Already have an account? <%= link_to 'Sign In', new_session_path %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
