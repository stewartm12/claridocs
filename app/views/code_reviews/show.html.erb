<%= content_tag :div, class: 'mx-auto' do %>
  <%= content_tag :div, class: 'bg-white rounded-lg shadow-lg' do %>
    <%= content_tag :div, class: 'px-6 py-4 border-b border-gray-200 flex items-center justify-between' do %>
      <%= content_tag :div do %>
        <%= content_tag :h1, @review_type, class: 'text-2xl font-bold text-gray-900' %>
        <%= content_tag :p, @filename, class: 'text-gray-600' %>
      <% end %>
      <%= link_to "â† Back to Reviews", code_reviews_path, class: "bg-gray-100 hover:bg-gray-200 px-4 py-2 rounded-md text-gray-700" %>
    <% end %>

    <%= content_tag :div, class: 'p-6 bg-white rounded-lg shadow-md' do %>
      <%= content_tag :div, class: 'prose prose-lg prose-slate max-w-none dark:prose-invert prose-pre:bg-gray-100 prose-pre:p-4 prose-pre:rounded-lg prose-pre:overflow-x-auto' do %>
        <%= sanitize(@markdown_html, 
          tags: %w[h1 h2 h3 h4 h5 h6 p br strong b em i ul ol li code pre blockquote a hr table thead tbody tr th td div span],
          attributes: %w[href class id]) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
