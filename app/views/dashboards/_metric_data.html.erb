<%= tag.div class: 'bg-gradient-to-br from-white to-slate-100 rounded-xl p-6 border border-border shadow-sm' do %>
  <%= tag.div class: 'flex items-start justify-between' do %>
    <%= tag.div do %>
      <%= tag.p title, class: 'text-sm text-muted-foreground' %>
      <%= tag.p count, class: 'text-2xl font-bold' %>
    <% end %>

    <%= tag.div class: "size-12 text-#{color}-700 bg-#{color}-100 rounded-lg flex items-center justify-center" do %>
      <%= heroicon icon, options: { class: 'size-6' } %>
    <% end %>
  <% end %>
<% end %>
