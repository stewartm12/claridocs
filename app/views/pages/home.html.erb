<%= render 'header' %>

<%= content_tag :section, class: 'relative py-20 lg:py-32 bg-gray-200' do %>
  <%= content_tag :div, class: 'container mx-auto px-4 sm:px-6 lg:px-8' do %>
    <%= content_tag :div, class: 'max-w-4xl mx-auto text-center' do %>
      <%= content_tag :h1, class: 'text-4xl sm:text-5xl lg:text-6xl font-bold text-balance mb-6' do %>
        <%= t('.title_1') %> <%= content_tag :span, t('.title_2'), class: 'text-primary' %>
      <% end %>

      <%= content_tag :p, t('.description'), class: 'text-xl text-muted-foreground text-pretty mb-8 max-w-2xl mx-auto leading-relaxed' %>

      <%= link_to t('.get_started'), new_registration_path, class: 'btn-primary btn-lg' %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag :section, class: 'py-20 lg:py-32' do %>
  <%= content_tag :div, class: 'container mx-auto px-4 sm:px-6 lg:px-8' do %>
    <%= content_tag :div, class: 'text-center mb-16' do %>
      <%= content_tag :h2, t('.sub_title_1'), class: 'text-3xl lg:text-4xl font-bold mb-4 text-balance' %>
      <%= content_tag :p, t('.sub_description_1'), class: 'text-xl text-muted-foreground max-w-2xl mx-auto text-pretty' %>
    <% end %>

    <%= content_tag :div, class: 'grid md:grid-cols-3 gap-8' do %>
      <%= render 'section',
        icon: 'rectangle-stack',
        title: t('.section_card_title_1'),
        description: t('.section_card_descr_1') %>
      <%= render 'section',
        icon: 'light-bulb',
        title: t('.section_card_title_2'),
        description: t('.section_card_descr_2') %>
      <%= render 'section',
        icon: 'magnifying-glass',
        title: t('.section_card_title_3'),
        description: t('.section_card_descr_3') %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag :div, class: 'py-20 lg:py-32' do %>
  <%= content_tag :div, class: 'container mx-auto px-4 sm:px-6 lg:px-8' do %>
    <%= content_tag :div, class: 'max-w-4xl mx-auto text-center' do %>
      <%= content_tag :h2, t('.bottom_section_title'), class: 'text-3xl lg:text-4xl font-bold mb-6 text-balance' %>
      <%= content_tag :p, t('.bottom_section_descr'), class: 'text-xl text-muted-foreground mb-8 max-w-2xl mx-auto text-pretty' %>
      <%= link_to t('.get_started'), new_registration_path, class: 'btn-primary btn-lg' %>
    <% end %>
  <% end %>
<% end %>

<%= render 'footer' %>
