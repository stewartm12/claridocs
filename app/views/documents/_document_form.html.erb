<%= form_with url: url, model: document do |f| %>
  <%= hidden_field_tag :source, params[:source] %>
  <%= content_tag :div, class: 'fixed left-[50%] top-[50%] z-50 grid w-full max-w-lg translate-x-[-50%] translate-y-[-50%] gap-4 border border-gray-400 bg-white p-6 shadow-lg duration-200 rounded-md' do %>
    <%= content_tag :div, class: 'flex flex-col space-y-1.5 text-center sm:text-left' do %>
      <%= content_tag :h2, title, class: 'text-lg font-semibold leading-none tracking-tight' %>
      <%= content_tag :p, description, class: 'text-sm text-gray-500' %>
    <% end %>

    <%= content_tag :div, class: 'grid gap-4 py-4' do %>
      <% if editable %>
        <%= content_tag :div, class: 'grid gap-2' do %>
          <%= f.label :title %>
          <%= f.text_field :title,
            required: true,
            autocomplete: 'title',
            placeholder: 'Update Document Title'
          %>
        <% end %>
      <% end %>

      <%= content_tag :div, class: 'grid gap-2' do %>
        <%= f.label :description %>
        <%= f.text_area :description,
          required: true,
          autocomplete: 'description',
          placeholder: 'Personal Document Description'
        %>
      <% end %>

      <% if !editable %>
        <%= content_tag :div, class: 'grid gap-2', data: { controller: 'file-input' } do %>
          <%= f.label :file, class: 'btn-secondary cursor-pointer' do %>
            Upload File
            <%= f.file_field :file, direct_upload: true, class: 'sr-only', data: { 'file-input-target': 'input', action: 'change->file-input#update' } %>
            <%= tag.span 'No File Selected', class: 'text-sm text-primary', data: { file_input_target: 'output' } %>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag :div, class: 'flex items-center space-x-2' do %>
        <%= content_tag :span, 'AI Extract?', class: 'text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70' %>
        <%= f.label :ai_extract, class: 'relative inline-flex items-center cursor-pointer mb-0' do %>
          <%= f.check_box :ai_extract, class: 'sr-only peer', disabled: @document.ai_extract? %>
          <%= content_tag :div, nil, class: 'w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-emerald-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-emerald-600' %>
        <% end %>
      <% end %>
    <% end %>

    <%= content_tag :div, class: 'flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2' do %>
      <%= button_tag 'Cancel', type: 'button', class: 'inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium border border-gray-400 bg-white hover:bg-gray-100 h-10 px-4 py-2 cursor-pointer', data: { action: 'modal#hideModal' } %>
      <%= f.submit submit_text, class: 'btn-primary' %>
    <% end %>

    <%= button_tag type: 'button', class: 'absolute right-4 top-4 rounded-sm text-gray-600 hover:text-emerald-600 hover:bg-gray-50 cursor-pointer', data: { action: 'modal#hideModal' } do %>
      <%= icon 'x-mark' %>
    <% end %>
  <% end %>
<% end %>
