<%= content_tag :div, class: 'min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8' do %>
  <%= content_tag :div, class: 'max-w-md w-full space-y-8' do %>
    <%= content_tag :div, class: 'text-center' do %>
      <%= link_to root_path, class: 'flex items-center justify-center mb-6' do %>
        <%= image_tag "https://hebbkx1anhila5yf.public.blob.vercel-storage.com/attachments/gen-images/public/claridocs-logo-modern-clean-F2aiTC3w4Gj16Z3M5yb3pFDckjYReJ.jpg",
          class: "size-8 mr-3" %>
        <%= content_tag :span, 'ClariDocs', class: 'text-2xl font-bold' %>
      <% end %>
      <%= content_tag :h3, 'Forgotten Password', class: 'text-3xl font-bold mb-2' %>
      <%= content_tag :p, 'Input the email you have registered your acount to', class: 'text-muted-foreground' %>
    <% end %>

    <%= content_tag :div, class: 'bg-card rounded-xl border border-border p-8 shadow-sm' do %>
      <%= form_with url: passwords_path, class: 'space-y-6' do |f| %>
        <%= content_tag :div do %>
          <%= f.label :email, class: 'block text-sm font-medium mb-2' %>
          <%= f.email_field :email,
            required: true,
            autofocus: true,
            autocomplete: 'email',
            placeholder: 'name@example.com',
            class: 'w-full px-3 py-2 border border-border rounded-lg bg-input placeholder-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent' %>
        <% end %>

        <%= f.submit 'Email reset instructions', class: 'w-full bg-primary text-primary-foreground py-2 px-4 rounded-lg hover:bg-emerald-500 transition-colors font-medium hover:cursor-pointer' %>
      <% end %>
    <% end %>

    <%= content_tag :div, class: 'text-center' do %>
      <%= content_tag :p, class: 'text-muted-foreground' do %>
        Back to <%= link_to 'Sign In', new_session_path, class: 'text-primary hover:text-primary/80 transition-colors hover:underline' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
